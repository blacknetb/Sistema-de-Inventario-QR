# ============================================
# ✅ CONFIGURACIÓN .env.test
# Entorno de pruebas
# ============================================

# ============================================
# ENVIRONMENT
# ============================================

NODE_ENV=test
VITE_ENV=test
VITE_APP_ENVIRONMENT=test

# ============================================
# APP CONFIGURATION
# ============================================

VITE_APP_NAME="Sistema de Inventario QR (Testing)"
VITE_APP_VERSION="2.0.0-test"

# ============================================
# BACKEND API
# ============================================

VITE_API_URL="http://localhost:3001"
VITE_API_BASE_URL="http://localhost:3001/api"
VITE_API_TIMEOUT=5000
VITE_USE_MOCK_API=true
VITE_MOCK_API_DELAY=0

# ============================================
# TESTING CONFIGURATION
# ============================================

VITE_TEST_ENABLED=true
VITE_TEST_BASE_URL="http://localhost:5173"
VITE_TEST_TIMEOUT=10000
VITE_TEST_RETRIES=2

# ============================================
# DEBUG & LOGGING
# ============================================

VITE_DEBUG=false
VITE_LOG_LEVEL="warn"
VITE_LOG_REQUESTS=false

# ============================================
# FEATURE FLAGS
# ============================================

VITE_FEATURE_PWA=false
VITE_FEATURE_NOTIFICATIONS=false
VITE_FEATURE_ANALYTICS=false