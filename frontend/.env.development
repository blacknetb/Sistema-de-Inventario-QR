# ============================================
# ✅ CONFIGURACIÓN .env.development
# Entorno de desarrollo local
# ============================================

# ============================================
# ENVIRONMENT
# ============================================

NODE_ENV=development
VITE_ENV=development
VITE_APP_ENVIRONMENT=development

# ============================================
# APP CONFIGURATION
# ============================================

VITE_APP_NAME="Sistema de Inventario QR (Desarrollo)"
VITE_APP_VERSION="2.0.0-dev"

# ============================================
# BACKEND API
# ============================================

VITE_API_URL="http://localhost:3000"
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_API_TIMEOUT=10000
VITE_API_MAX_RETRIES=2
VITE_USE_MOCK_API=true
VITE_MOCK_API_DELAY=300

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

VITE_PORT=5173
VITE_HOST="localhost"
VITE_OPEN_BROWSER=true
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false

# ============================================
# DEBUG & LOGGING
# ============================================

VITE_DEBUG=true
VITE_LOG_LEVEL="debug"
VITE_LOG_REQUESTS=true
VITE_LOG_RESPONSES=true
VITE_LOG_CONSOLE_COLORS=true
VITE_LOG_TIMESTAMP=true

# ============================================
# FEATURE FLAGS
# ============================================

VITE_FEATURE_PWA=false
VITE_FEATURE_OFFLINE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_DARK_MODE=true

# ============================================
# PERFORMANCE
# ============================================

VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SLOW_THRESHOLD=500
VITE_PERFORMANCE_VERY_SLOW_THRESHOLD=2000

# ============================================
# SECURITY
# ============================================

VITE_SECURITY_ENABLE_HTTPS=false
VITE_SECURITY_CSP_ENABLED=false
VITE_SECURITY_COOKIE_SECURE=false

# ============================================
# DATABASE (FRONTEND CACHE)
# ============================================

VITE_DB_AUTO_SYNC=true
VITE_DB_SYNC_INTERVAL=60000
VITE_DB_DEBUG=true

# ============================================
# CACHE
# ============================================

VITE_CACHE_ENABLED=false
VITE_CACHE_DEBUG=true

# ============================================
# WEB SOCKET
# ============================================

VITE_WS_ENABLED=true
VITE_WS_DEBUG=true