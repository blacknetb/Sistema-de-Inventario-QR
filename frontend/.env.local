VITE_AUTH_TOKEN_KEY=accessToken
VITE_AUTH_REFRESH_KEY=refreshToken
VITE_AUTH_USER_KEY=user
VITE_LOGIN_REDIRECT=/dashboard
VITE_LOGOUT_REDIRECT=/login

# ========================================
