# ============================================
# ✅ CONFIGURACIÓN .env.production
# Entorno de producción
# ============================================

# ============================================
# ENVIRONMENT
# ============================================

NODE_ENV=production
VITE_ENV=production
VITE_APP_ENVIRONMENT=production

# ============================================
# APP CONFIGURATION
# ============================================

VITE_APP_NAME="Sistema de Inventario QR"
VITE_APP_VERSION="2.0.0"

# ============================================
# BACKEND API
# ============================================

VITE_API_URL="https://api.inventarioqr.example.com"
VITE_API_BASE_URL="https://api.inventarioqr.example.com/api"
VITE_API_TIMEOUT=30000
VITE_API_MAX_RETRIES=3
VITE_USE_MOCK_API=false

# ============================================
# BUILD SETTINGS
# ============================================

VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET="es2020"

# ============================================
# DEBUG & LOGGING
# ============================================

VITE_DEBUG=false
VITE_LOG_LEVEL="error"
VITE_LOG_REQUESTS=false
VITE_LOG_RESPONSES=false
VITE_LOG_CONSOLE_COLORS=false

# ============================================
# FEATURE FLAGS
# ============================================

VITE_FEATURE_PWA=true
VITE_FEATURE_OFFLINE=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_DARK_MODE=true

# ============================================
# PERFORMANCE
# ============================================

VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SLOW_THRESHOLD=1000
VITE_PERFORMANCE_VERY_SLOW_THRESHOLD=3000

# ============================================
# SECURITY
# ============================================

VITE_SECURITY_ENABLE_HTTPS=true
VITE_SECURITY_CSP_ENABLED=true
VITE_SECURITY_COOKIE_SECURE=true

# ============================================
# PWA
# ============================================

VITE_PWA_ENABLED=true
VITE_PWA_WORKBOX_DEBUG=false

# ============================================
# CACHE
# ============================================

VITE_CACHE_ENABLED=true
VITE_CACHE_DEBUG=false

# ============================================
# WEB SOCKET
# ============================================

VITE_WS_ENABLED=true
VITE_WS_DEBUG=false
VITE_WS_URL="wss://api.inventarioqr.example.com"