{
  "name": "inventory-qr-backend",
  "version": "1.0.0",
  "description": "Backend for Inventory QR Management System with advanced features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:e2e": "jest --testPathPattern=e2e --detectOpenHandles",
    "test:unit": "jest --testPathPattern=unit --detectOpenHandles",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node src/database/migrations/runMigrations.js",
    "migrate:create": "node src/database/migrations/createMigration.js",
    "migrate:rollback": "node src/database/migrations/rollbackMigration.js",
    "seed": "node src/database/seeds/runSeeds.js",
    "seed:create": "node src/database/seeds/createSeed.js",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:status": "node src/database/migrations/checkMigrations.js",
    "docs:generate": "node src/utils/generateSwagger.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t inventory-qr-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env inventory-qr-backend",
    "docker:compose": "docker-compose up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs inventory-qr-backend",
    "pm2:monitor": "pm2 monit"
  },
  "keywords": [
    "inventory",
    "qr",
    "management",
    "express",
    "mysql",
    "nodejs",
    "rest-api",
    "jwt",
    "authentication",
    "authorization"
  ],
  "author": "Jason Azofeifa Mejia",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=11.6.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "excel4node": "^1.8.2",
    "exceljs": "^4.4.0",
    "express": "^5.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "install": "^0.13.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.11",
    "npm": "^11.7.0",
    "path-to-regexp": "^8.3.0",
    "pdfkit": "^0.17.2",
    "pm2": "^6.0.14",
    "qr-image": "^3.2.0",
    "qrcode": "^1.5.4",
    "read-excel-file": "^5.8.0",
    "sharp": "^0.34.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/coverage/",
      "jest.config.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/database/migrations/**",
      "!src/database/seeds/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/inventory-qr-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/inventory-qr-backend/issues"
  },
  "homepage": "https://github.com/yourusername/inventory-qr-backend#readme"
}
